[flake8]
max-line-length = 79

ignore =
    # I101,   # Missing parameter(s) in Docstring
    # S001,   # Syntax error: s Unable to parse colon: expected TokenType.COLON but received TokenType.NEWLINE
    # RST304  # Unknown interpreted text role "func"
    # D202,  # I like having a space between docstring and code
    # W503,  # Conflicts with rule W504 (line break after binary operator)

exclude =
    .git,                 # No need to traverse our git directory
    __pycache__,          # There's no value in checking cache directories
    docs/source/conf.py,  # The conf file is mostly autogenerated, ignore it
    build,                # This contains our built documentation

import-order-style = google

max-complexity = 5

inline-quotes = "
